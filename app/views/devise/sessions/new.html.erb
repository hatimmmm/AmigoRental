<div class="container">
  <h1 class="my-5 text-primary"> Welcome Amigo!</h1>
  <div class="d-flex justify-content-between align-items-start gap-3">
    <div class="col bg-danger p-4"><%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'form-control text-primary' } %>
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: 'form-control text-primary'  } %>
          <%= f.input :remember_me, as: :boolean, input_html: { class: 'form-check-input' } if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions row align-middle p-3">
          <%= f.button :submit, "Log in", class: 'btn btn-primary mb-2' %>
          <%= render "devise/shared/links" %></div>
        </div>
      <% end %>
    <div class="col-6 border border-2 border-danger" id="">
      <img src="https://img.freepik.com/free-vector/flat-illustration-dia-del-amigo-celebration_23-2150525481.jpg?w=740&t=st=1706189097~exp=1706189697~hmac=c80b6142ec5beb643ca182c469f9472a37b7d05dd02fbe8865553fd08a899f9f" alt="" srcset="" style="width:100% ">
    </div>
  </div>
</div>
<h2>Log in</h2>

<div class="container">
  <h2 class="my-5 text-primary">Sign up and rent a friend ! i mean make .</h2>
  <div class="d-flex justify-content-between align-items-start gap-3">
    <div class="col bg-danger p-4">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs ">
          <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "first name" },
                  label_html: { class: "form-label" },
                  wrapper_html: { class: "form-group" } %>
          <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "last name" },
                  label_html: { class: "form-label" },
                  wrapper_html: { class: "form-group" } %>
          <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label_html: { class: "form-label" },
                  wrapper_html: { class: "form-group" } %>
          <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" },
                  label_html: { class: "form-label" },
                  wrapper_html: { class: "form-group" },
                  class: "form-control" %>
          <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" },
                  label_html: { class: "form-label" },
                  wrapper_html: { class: "form-group" },
                  class: "form-control" %>
        </div>
        <div class="form-actions row align-middle p-3">
          <%= f.button :submit, "Sign up", class: "btn btn-primary mb-2" %>
          <%= render "devise/shared/links"  %>
        </div>
      <% end %>
    </div>
    <div class="col-6 border border-2 border-danger" id="">
      <img src="https://img.freepik.com/free-vector/flat-illustration-dia-del-amigo-celebration_23-2150525481.jpg?w=740&t=st=1706189097~exp=1706189697~hmac=c80b6142ec5beb643ca182c469f9472a37b7d05dd02fbe8865553fd08a899f9f" alt="" srcset="" style="width:100% ">
    </div>
  </div>
</div>

  
<div class="row border border-primary rounded p-2 mb-1 bg-light">
  <div class="col-2 d-flex justify-content-center align-items-center gap-1 me-3"><img class="avatar" style="height: 50px; width:50px; object-fit:cover;" src="<%=@request.user.avatar_url%>" alt="">
    <p class="col text-muted m-0" style="font-size: 15px;"><%=@request.user.first_name%></p>
  </div>
  <div class="col d-flex align-items-center d-inline-block text-truncate" style="max-width:200px;"><%=@request.message%></div>
  <div class="col d-flex ms-auto justify-content-end align-items-center gap-1">
    <%= button_to 'Accept', accept_request_path(request), method: :post, class:"btn btn-success" %>
    <%= button_to "delete", {:controller => :requests,
:action => 'destroy', :id => @request.id }, :method => :delete ,class: "btn btn-danger"%>
  </div>
</div>
